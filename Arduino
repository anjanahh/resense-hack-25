#include <WiFi.h>
#include <HTTPClient.h>

const char* ssid = "YOUR_WIFI_SSID";
const char* password = "YOUR_WIFI_PASSWORD";
const char* serverURL = "http://your-server-ip:5000/api/bins";  // change to your backend

#define TRIG_PIN 5
#define ECHO_PIN 18
String binId = "BIN_001";

void setup() {
  Serial.begin(115200);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi...");
  }

  pinMode(TRIG_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);
  Serial.println("Connected to WiFi âœ…");
}

float getDistance() {
  digitalWrite(TRIG_PIN, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG_PIN, LOW);
  long duration = pulseIn(ECHO_PIN, HIGH);
  float distance = duration * 0.034 / 2;
  return distance;
}

void loop() {
  float distance = getDistance(); // in cm
  float fillLevel = 100 - (distance / 30.0 * 100); // assuming bin height is 30cm
  if (fillLevel > 100) fillLevel = 100;
  if (fillLevel < 0) fillLevel = 0;

  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin(serverURL);
    http.addHeader("Content-Type", "application/json");

    String jsonData = "{\"binId\":\"" + binId + "\",\"fillLevel\":" + String(fillLevel, 2) + ",\"weight\":0,\"timestamp\":\"" + String(millis()) + "\"}";
    int httpResponseCode = http.POST(jsonData);

    Serial.print("POST Response Code: ");
    Serial.println(httpResponseCode);
    http.end();
  } else {
    Serial.println("WiFi Disconnected");
  }

  delay(10000); // send every 10 seconds
}
